@model EO.Application.ViewModels.InputModels.Usuario.EditarUsuarioViewModel

<h1>Editar Perfil</h1>

<hr/>

<form id="perfil" method="post" asp-action="EditarPerfil">
    <input asp-for="Id" type="hidden"/>
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Telefone"></label>
            <input asp-for="@Model.Telefone" class="form-control" />
            <span asp-validation-for="@Model.Telefone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.ChavePix"></label>
            <input asp-for="@Model.ChavePix" class="form-control" />
            <span asp-validation-for="@Model.ChavePix" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Alterar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}